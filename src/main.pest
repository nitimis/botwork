WHITESPACE =  _{ " " | "\t" }
oduraja    =   { SOI ~ ( statement | NEWLINE )* ~ EOI }
statement  =   { fragment ~ ( parameter | fragment )* }
parameter  =   { "{" ~ expression ~ "}" }
fragment   =   { LETTER+ }
int        =  @{ ( ASCII_NONZERO_DIGIT ~ ASCII_DIGIT+ | ASCII_DIGIT ) }
expression =   { prefix* ~ primary ~ ( operator ~ prefix* ~ primary )* }
operator   =  _{ add | sub | mul | div }
add        =   { "+" } 
sub        =   { "-" } 
mul        =   { "*" } 
div        =   { "/" } 
prefix     =  _{ neg }
neg        =   { "-" } // Negation
primary    =  _{ int | "(" ~ expression ~ ")" }